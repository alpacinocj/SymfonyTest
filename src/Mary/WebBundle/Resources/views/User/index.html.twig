{% extends 'MaryWebBundle::layout.html.twig' %}

{% block title %}{{ 'User'|trans}} - {{ parent() }}{% endblock %}

{% block main %}
    <h3>User center</h3><a href="{{ path('logout') }}">{{ 'Logout'|trans }}</a>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <p>{{ hello_service.say(app.user.username) }}</p>
        {% if app.user.avatar %}
            {#<p>{{ uploadedImg(app.user.avatar, 50, 50) }}</p>#}
            <p>{{ uploadedThumbImg(app.user.avatar, [120, 90]) }}</p>
            {#<p>{{ uploadedThumbImg(app.user.avatar, [200, 150]) }}</p>#}
        {% endif %}
    {% endif %}
{% endblock %}