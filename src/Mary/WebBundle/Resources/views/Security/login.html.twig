{% extends 'MaryWebBundle::layout.html.twig' %}

{% block title %}{{ 'Login'|trans}} - {{ parent() }}{% endblock %}

{% block page_styles %}
    {{ web_macro.asset_css('assets/maryweb/css/login.css') }}
{% endblock %}

{% block page_scripts %}
    {{ web_macro.asset_js('assets/maryweb/js/login.js') }}
{% endblock %}

{% block main %}
    <h3 class="login-title">Login page</h3>
    <div class="login-form">
        <form action="{{ path('login') }}" method="post">
            {% if error %}
                <p style="color: #f00;">{{ error.messageKey|trans(error.messageData) }}</p>
            {% endif %}
            <label for="username">Username: </label>
            <input type="text" name="username" id="username" value="{{ lastUsername }}">
            <label for="password">Password: </label>
            <input type="password" name="password" id="password">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button type="submit">Login</button>
        </form>
    </div>
{% endblock %}