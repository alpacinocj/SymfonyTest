{% extends 'MaryWebBundle::layout.html.twig' %}

{% block title %}{{ 'User list'|trans}} - {{ parent() }}{% endblock %}

{% block main %}
    <h3>{{ 'User list'|trans}}</h3>
    <div class="search-form">
        <form action="{{ path('user_list') }}" method="get">
            <input type="text" name="kw" value="{{ keywords }}">
            <button type="submit">Search</button>
        </form>
    </div>
    <div class="user-list">
        <table>
            <thead>
                <tr>
                    <th>{{ 'No'|trans }}</th>
                    <th>{{ 'Username'|trans }}</th>
                    <th>{{ 'Age'|trans }}</th>
                    <th>{{ 'Email'|trans }}</th>
                    <th>{{ 'Created Time'|trans }}</th>
                    <th>{{ 'Updated Time'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in pagination %}
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td>{{ entity.username }}</td>
                        <td>{{ entity.age }}</td>
                        <td>{{ entity.email }}</td>
                        <td>{{ entity.created_time|date('Y/m/d') }}</td>
                        <td>{{ entity.updated_time|date('Y/m/d') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6">{{ knp_pagination_render(pagination) }}</td>
                </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}