{% import 'MaryWebBundle::macro.html.twig' as web_macro %}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}Symfony Usage{% endblock %}</title>
    {% block styles %}
        {% block global_styles %}
            {% stylesheets
                'assets/public/css/normalize-7.0.0.css'
                'assets/public/css/global.css'
            filter='cssrewrite' output='compiled/css/main.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}">
            {% endstylesheets %}
        {% endblock %}
        {% block page_styles %}{% endblock %}
    {% endblock %}
    {% block global_scripts %}
        {% javascripts
            'assets/public/js/jquery-3.2.1.min.js'
            'assets/public/js/global.js'
        output='compiled/js/main.js'
        %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}
</head>
<body>
<div class="container">
    {% block header %}
        {% include 'MaryWebBundle::header.html.twig' %}
    {% endblock %}
    {% block main %}{% endblock %}
    {% block footer %}
        {% include 'MaryWebBundle::footer.html.twig' %}
    {% endblock %}
</div>
{% block page_scripts %}{% endblock %}
</body>
</html>